<div class="mt-4 p-2">
    <h1>Music Player</h1>
    <form action="/tracks/refresh" method="post">
        <button type="submit" class="btn btn-dark">Refresh Library</button>
    </form>

    {{#each songs }}
        <div class="card my-2 song" data-id="{{id}}" data-title="{{title}}"
             data-artist="{{artist}}" style="cursor: pointer;">

            <div class="d-flex">
                <img src="{{albumArt}}" class="rounded-start" alt="Album Art"
                     style="width: auto; max-height: 10vh;">
                <div class="card-body">
                    <div class="d-inline-block p-0">
                        <p class="card-title m-0">{{title}}</p>
                        <p class="card-text m-0 text-muted">{{artist}}</p>
                    </div>
                    <button class="btn d-inline-block align-top float-end p-0"
                            style="outline: none; box-shadow: none;"><i
                            data-favorited="{{#if favoritedBy.id}}1{{else}}0{{/if}}"
                            class="bi bi-heart-fill favoriteBtn {{#if
                                    favoritedBy.id}} bi-heart-fill {{else}} bi-heart {{/if}}"
                            style="color: red"></i></button>
                </div>
            </div>
        </div>
    {{/each}}
</div>